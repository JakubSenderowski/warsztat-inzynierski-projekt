generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")8
}

model User {
  id String @id @default(uuid())
  email String @unique
  password_hash String
  first_name String
  last_name String
  phone String?
  is_active Boolean @default(true)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt 
  user_roles UserRole[]
  sessions Session[]
  audit_logs AuditLog[]
  vehicles Vehicle[]
  service_requests ServiceRequest[]
  order_service_items OrderServiceItem[] @relation("PerformedBy")
  assigned_repair_orders RepairOrder[] @relation("AssignedMechanic")
  changed_by_status_history OrderStatusHistory[] @relation("StatusChangedBy")
  estimates Estimates[] @relation("CreatedBy")
  invoices Invoice[] @relation("Klient")
  client_appointments Appointments[] @relation("Klient")
  mechanic_appointments Appointments[] @relation("Mechanik")
  mechanic_schedules MechanicSchedules[] @relation("Mechanik")
  file_attachments FileAttachments[] @relation("UploadedBy")
  @@map("users")
}

model Role {
  id String @id @default(uuid())
  name String @unique
  description String?
  created_at DateTime @default(now())
  user_roles UserRole[]
  @@map("roles")
}

model UserRole {
  id String @id @default(uuid())
  user_id String
  role_id String
  assigned_at DateTime @default(now())
  assigned_by String?
  user User @relation(fields: [user_id], references: [id])
  role Role @relation(fields: [role_id], references: [id])
  @@map("user_roles")
}

model Session {
  id String @id @default(uuid())
  user_id String
  refresh_token String @unique
  ip_address String?
  user_agent String?
  expires_at DateTime 
  created_at DateTime @default(now())
  user User @relation(fields: [user_id], references: [id])
  @@map("sessions")
}

model AuditLog {
  id String @id @default(uuid())
  user_id String
  action String
  resource String?
  resource_id String?
  ip_address String?
  user_agent String?
  created_at DateTime @default(now())
  user User @relation(fields: [user_id], references: [id])

  @@map("audit_logs")
}

model VehicleBrand {
  id String @id @default(uuid())
  name String @unique 
  country String?
  logo_url String?
  created_at DateTime @default(now())
  vehicle_models VehicleModel[]
  @@map("vehicle_brands")
}

model VehicleModel {
  id String @id @default(uuid())
  name String
  brand_id String
  year_from Int?
  year_to Int?
  created_at DateTime @default(now())
  brand VehicleBrand @relation(fields: [brand_id], references: [id])
  vehicle Vehicle[]
  @@map("vehicle_models")
}

model EngineType {
  id String @id @default(uuid())
  name String @unique
  created_at DateTime @default(now())
  vehicles Vehicle[]
  @@map("engine_types")
}

model Vehicle {
  id String @id @default(uuid())
  user_id String
  model_id String
  engine_type_id String
  vin String @unique
  registration_number String
  production_year Int
  mileage Int
  color String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  user User @relation(fields: [user_id], references: [id])
  model VehicleModel @relation(fields: [model_id], references: [id])
  engine EngineType @relation(fields: [engine_type_id], references: [id])
  service_requests ServiceRequest[]
  repair_orders RepairOrder[]
  estimates Estimates[]
  appointments Appointments[]
  @@map("vehicles")
  }

model OrderStatus {
  id String @id @default(uuid())
  name String @unique
  description String?
  color String?
  order Int
  created_at DateTime @default(now())
  repair_orders RepairOrder[]
  status_history OrderStatusHistory[]
  @@map("order_statuses")
}

model ServiceRequest {
  id String @id @default(uuid())
  user_id String
  vehicle_id String?
  description String
  preferred_date DateTime?
  status String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  user User @relation(fields: [user_id], references: [id])
  vehicle Vehicle? @relation(fields: [vehicle_id], references: [id])
  repair_orders RepairOrder[]
  appointments Appointments[]
  @@map("service_requests")
}

model RepairOrder {
  id String @id @default(uuid())
  vehicle_id String
  service_request_id String?
  assigned_mechanic_id String?
  status_id String
  description String
  notes String?
  estimated_completion DateTime?
  actual_completion DateTime?
  total_cost Decimal? @db.Decimal(10, 2)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  vehicle Vehicle @relation(fields: [vehicle_id], references: [id])
  status OrderStatus @relation(fields: [status_id], references: [id])
  service_request ServiceRequest? @relation(fields: [service_request_id], references: [id])
  assigned_mechanic User? @relation("AssignedMechanic", fields: [assigned_mechanic_id], references: [id])
  status_history OrderStatusHistory[]
  order_part_item OrderPartItem[]
  estimates Estimates[]
  order_service_items OrderServiceItem[]
  invoices Invoice[]
  @@map("repair_orders")
}

model OrderStatusHistory {
  id String @id @default(uuid())
  repair_order_id String
  status_id String
  changed_by_id String?
  notes String?
  created_at DateTime @default(now())
  changed_by User? @relation("StatusChangedBy", fields: [changed_by_id], references: [id])
  repair_order RepairOrder @relation(fields: [repair_order_id], references: [id])
  status OrderStatus @relation(fields: [status_id], references: [id])
  @@map("order_status_history")
}

model ServiceCatalog {
  id String @id @default(uuid())
  name String
  description String?
  category String?
  default_price Decimal? @db.Decimal(10, 2)
  estimated_duration Int?
  is_active Boolean @default(true)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  order_service_items OrderServiceItem[]
  @@map("service_catalog")
}

model OrderServiceItem {
  id String @id @default(uuid())
  repair_order_id String
  service_catalog_id String?
  service_name String
  description String?
  quantity Decimal @db.Decimal(10,2)
  unit_price Decimal @db.Decimal(10,2)
  discount Decimal? @db.Decimal(10,2)
  total_price Decimal? @db.Decimal(10,2)
  performed_by_id String?
  created_at DateTime @default(now())
  repair_order RepairOrder @relation(fields: [repair_order_id], references: [id])
  service_catalog ServiceCatalog? @relation(fields: [service_catalog_id], references: [id])
  performed_by User? @relation("PerformedBy", fields: [performed_by_id], references: [id]) 
  @@map("order_service_items")
}

model OrderPartItem {
  id String @id @default(uuid())
  repair_order_id String
  part_name String
  part_number String?
  quantity Decimal @db.Decimal(10,2)
  unit_price Decimal @db.Decimal(10, 2)
  discount Decimal? @db.Decimal(10, 2)
  total_price Decimal? @db.Decimal(10,2)
  created_at DateTime @default(now())
  repair_order RepairOrder @relation(fields: [repair_order_id], references: [id])
  @@map("order_part_items")
}

model Estimates {
  id String @id @default(uuid())
  repair_order_id String?
  vehicle_id String
  description String
  estimated_cost Decimal @db.Decimal(10, 2)
  estimated_duration Int? 
  status String
  valid_until DateTime?
  notes String?
  created_by_id String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  repair_order RepairOrder? @relation(fields: [repair_order_id], references: [id])
  vehicle Vehicle @relation(fields: [vehicle_id], references: [id])
  created_by User @relation("CreatedBy", fields: [created_by_id], references: [id])
  @@map("estimates")
}

model UnitsOfMeasure {
  id String @id @default(uuid())
  name String @unique
  description String?
  created_at DateTime @default(now())
  parts Part[]
  @@map("units_of_measure")
}

model PartCategories  {
  id String @id @default(uuid())
  name String @unique
  description String?
  parts Part[]
  created_at DateTime @default(now())
  @@map("part_categories")
}

model Suppliers {
  id String @id @default(uuid())
  name String @unique
  contact_person String? 
  email String?
  phone String?
  address String?
  tax_id String?
  notes String?
  is_active Boolean @default(true)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  parts Part[]
  @@map("suppliers")
}

model Part {
  id String @id @default(uuid())
  part_number String @unique
  name String
  description String?
  category_id String
  unit_of_measure_id String
  supplier_id String?
  unit_price Decimal @db.Decimal(10,2)
  selling_price Decimal? @db.Decimal(10,2)
  min_stock_level Int?
  max_stock_level Int?
  location String?
  is_active Boolean @default(true)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  category PartCategories @relation(fields: [category_id], references: [id])
  unit_of_measure UnitsOfMeasure @relation(fields: [unit_of_measure_id], references: [id])
  supplier Suppliers? @relation(fields: [supplier_id], references: [id])
  @@map("parts")
}

model TaxRate {
  id String @id @default(uuid())
  name String @unique
  rate Decimal @db.Decimal(10,2)
  description String?
  is_active Boolean @default(true)
  created_at DateTime @default(now())
  invoice_items InvoiceItem[]
  @@map("tax_rates")
}

model PaymentMethod {
  id String @id @default(uuid())
  name String @unique
  description String?
  is_active Boolean @default(true)
  created_at DateTime @default(now())
  invoices Invoice[]
  @@map("payment_methods")
}

model Invoice {
  id String @id @default(uuid())
  invoice_number String @unique
  repair_order_id String?
  klient_id String
  payment_method_id String
  issue_date DateTime
  due_date DateTime?
  paid_date DateTime?
  subtotal Decimal @db.Decimal(10,2)
  tax_amount Decimal @db.Decimal(10,2)
  total_amount Decimal @db.Decimal(10,2)
  status String
  notes String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  repair_order RepairOrder? @relation(fields: [repair_order_id], references: [id])
  klient User @relation("Klient", fields: [klient_id], references: [id])
  payment_method PaymentMethod @relation(fields: [payment_method_id], references: [id])
  invoice_items InvoiceItem[]
  @@map("invoices")
}

model InvoiceItem {
  id String @id @default(uuid())
  invoice_id String
  item_type String
  description String?
  name String
  quantity Decimal @db.Decimal(10,2)
  unit_price Decimal @db.Decimal(10,2)
  tax_rate_id String
  tax_amount Decimal @db.Decimal(10,2)
  total_amount Decimal @db.Decimal(10,2)
  created_at DateTime @default(now())
  tax_rate TaxRate @relation(fields: [tax_rate_id], references: [id])
  invoice Invoice @relation(fields: [invoice_id], references: [id])
  @@map("invoice_items")
}

model Appointments {
  id String @id @default(uuid())
  vehicle_id String
  klient_id String
  mechanic_id String?
  service_request_id String?
  appointment_date DateTime
  estimated_duration Int 
  status String
  notes String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  klient User @relation("Klient", fields: [klient_id], references: [id])
  mechanic User? @relation("Mechanik", fields: [mechanic_id], references: [id])
  vehicle Vehicle @relation(fields: [vehicle_id], references: [id])
  service_request ServiceRequest? @relation(fields: [service_request_id], references: [id])
  @@map("appointments")
}

model MechanicSchedules {
  id String @id @default(uuid())
  mechanic_id String
  date DateTime @default(now())
  start_time DateTime 
  end_time DateTime
  is_available Boolean @default(true)
  notes String?
  created_at DateTime @default(now())
  mechanic User @relation("Mechanik", fields: [mechanic_id], references: [id])
  @@map("mechanic_schedules")
}

model SystemSettings {
  id String @id @default(uuid())
  setting_key String @unique
  description String?
  setting_value String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  @@map("system_settings")
}

model PrintTemplates {
  id String @id @default(uuid())
  name String @unique
  template_type String
  template_content String
  is_default Boolean @default(true)
  is_active Boolean @default(true)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  @@map("print_templates")
}

model FileAttachments {
  id String @id @default(uuid())
  file_name String
  file_path String
  file_type String
  file_size Int
  related_entity_type String?
  related_entity_id String?
  uploaded_by_id String?
  created_at DateTime @default(now())
  uploaded_by User? @relation("UploadedBy", fields: [uploaded_by_id], references: [id])
  @@map("file_attachments")
}