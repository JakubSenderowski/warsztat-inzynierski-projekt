generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  email String @unique
  password_hash String
  first_name String
  last_name String
  phone String?
  is_active Boolean @default(true)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt 
  user_roles UserRole[]
  sessions Session[]
  audit_logs AuditLog[]
  vehicles Vehicle[]
  service_requests ServiceRequest[]
  assigned_repair_orders RepairOrder[] @relation("AssignedMechanic")
  changed_by_status_history OrderStatusHistory[] @relation("StatusChangedBy")
  @@map("users")
}

model Role {
  id String @id @default(uuid())
  name String @unique
  description String?
  created_at DateTime @default(now())
  user_roles UserRole[]
  @@map("roles")
}

model UserRole {
  id String @id @default(uuid())
  user_id String
  role_id String
  assigned_at DateTime @default(now())
  assigned_by String?
  user User @relation(fields: [user_id], references: [id])
  role Role @relation(fields: [role_id], references: [id])
  @@map("user_roles")
}

model Session {
  id String @id @default(uuid())
  user_id String
  refresh_token String @unique
  ip_address String?
  user_agent String?
  expires_at DateTime 
  created_at DateTime @default(now())
  user User @relation(fields: [user_id], references: [id])
  @@map("sessions")
}

model AuditLog {
  id String @id @default(uuid())
  user_id String
  action String
  resource String?
  resource_id String?
  ip_address String?
  user_agent String?
  created_at DateTime @default(now())
  user User @relation(fields: [user_id], references: [id])

  @@map("audit_logs")
}

model VehicleBrand {
  id String @id @default(uuid())
  name String @unique 
  country String?
  logo_url String?
  created_at DateTime @default(now())
  vehicle_models VehicleModel[]
  @@map("vehicle_brands")
}

model VehicleModel {
  id String @id @default(uuid())
  name String
  brand_id String
  year_from Int?
  year_to Int?
  created_at DateTime @default(now())
  brand VehicleBrand @relation(fields: [brand_id], references: [id])
  vehicle Vehicle[]
  @@map("vehicle_models")
}

model EngineType {
  id String @id @default(uuid())
  name String @unique
  created_at DateTime @default(now())
  vehicles Vehicle[]
  @@map("engine_types")
}

model Vehicle {
  id String @id @default(uuid())
  user_id String
  model_id String
  engine_type_id String
  vin String @unique
  registration_number String
  production_year Int
  mileage Int
  color String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  user User @relation(fields: [user_id], references: [id])
  model VehicleModel @relation(fields: [model_id], references: [id])
  engine EngineType @relation(fields: [engine_type_id], references: [id])
  service_requests ServiceRequest[]
  repair_orders RepairOrder[]
  @@map("vehicles")
  }

model OrderStatus {
  id String @id @default(uuid())
  name String @unique
  description String?
  color String?
  order Int
  created_at DateTime @default(now())
  repair_orders RepairOrder[]
  status_history OrderStatusHistory[]
  @@map("order_statuses")
}

model ServiceRequest {
  id String @id @default(uuid())
  user_id String
  vehicle_id String?
  description String
  preferred_date DateTime?
  status String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  user User @relation(fields: [user_id], references: [id])
  vehicle Vehicle? @relation(fields: [vehicle_id], references: [id])
  repair_orders RepairOrder[]
  @@map("service_requests")
}

model RepairOrder {
  id String @id @default(uuid())
  vehicle_id String
  service_request_id String?
  assigned_mechanic_id String?
  status_id String
  description String
  notes String?
  estimated_completion DateTime?
  actual_completion DateTime?
  total_cost Decimal? @db.Decimal(10, 2)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  vehicle Vehicle @relation(fields: [vehicle_id], references: [id])
  status OrderStatus @relation(fields: [status_id], references: [id])
  service_request ServiceRequest? @relation(fields: [service_request_id], references: [id])
  assigned_mechanic User? @relation("AssignedMechanic", fields: [assigned_mechanic_id], references: [id])
  status_history OrderStatusHistory[]
  @@map("repair_orders")
}

model OrderStatusHistory {
  id String @id @default(uuid())
  repair_order_id String
  status_id String
  changed_by_id String?
  notes String?
  created_at DateTime @default(now())
  changed_by User? @relation("StatusChangedBy", fields: [changed_by_id], references: [id])
  repair_order RepairOrder @relation(fields: [repair_order_id], references: [id])
  status OrderStatus @relation(fields: [status_id], references: [id])
  @@map("order_status_history")
}